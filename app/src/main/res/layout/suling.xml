<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layUtama"
    android:layout_height="match_parent"
    android:background="@drawable/bg2">
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-5730449577374867/9440547657" />

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/button_back"
        android:layout_below="@+id/adView"
        android:padding="10dp"/>
    <Button
        android:id="@+id/btnSound"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/adView"
        android:background="@drawable/ic_sound1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imgSuling"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-65dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/soundDo"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:layout_marginLeft="65dp"
            android:layout_marginStart="65dp"
            android:visibility="invisible"
            android:src="@drawable/sound_effect"/>
        <ImageView
            android:id="@+id/soundRe"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:visibility="invisible"
            android:src="@drawable/sound_effect"/>
        <ImageView
            android:id="@+id/soundMi"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:visibility="invisible"
            android:src="@drawable/sound_effect"/>
        <ImageView
            android:id="@+id/soundFa"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:visibility="invisible"
            android:src="@drawable/sound_effect"/>
        <ImageView
            android:id="@+id/soundSol"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:visibility="invisible"
            android:src="@drawable/sound_effect"/>
        <ImageView
            android:id="@+id/soundLa"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:visibility="invisible"
            android:src="@drawable/sound_effect"/>
        <ImageView
            android:id="@+id/soundSi"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:visibility="invisible"
            android:src="@drawable/sound_effect"/>
        <ImageView
            android:id="@+id/soundDoo"
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:visibility="invisible"
            android:src="@drawable/sound_effect"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/imgSuling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/sulingbambu"/>
    <RelativeLayout
        android:id="@+id/laySound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/adView2"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/imgDo"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:src="@drawable/btn_press"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/colorWhite"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/imgRe"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:src="@drawable/btn_press"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/colorWhite"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/imgMi"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:src="@drawable/btn_press"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/colorWhite"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/imgFa"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:src="@drawable/btn_press"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="@color/colorWhite"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/imgSol"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:src="@drawable/btn_press"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="@color/colorWhite"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/imgLa"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:src="@drawable/btn_press"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textColor="@color/colorWhite"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/imgSi"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:src="@drawable/btn_press"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textColor="@color/colorWhite"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/imgDoo"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:src="@drawable/btn_press"/>
                <TextView
                    android:id="@+id/teksDoo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="@color/colorWhite"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
        </LinearLayout>
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="ca-app-pub-5730449577374867/9440547657" />
    </RelativeLayout>
</RelativeLayout>